(include 'sys/func.inc)
(include 'class/stream/class.inc)
(include 'class/sym/class.inc)
(include 'class/num/class.inc)
(include 'class/pair/class.inc)
(include 'class/hmap/class.inc)
(include 'class/lisp/class.inc)

(def-method 'lisp 'read_char)
	;inputs
	;r0 = lisp object (ptr)
	;r1 = stream object (ptr)
	;r2 = last char (uint)
	;outputs
	;r0 = lisp object (ptr)
	;r1 = next char (uint)

	(ptr 'this 'stream 'line)
	(pptr 'iter)
	(ulong 'char)

	(push-scope)
	(entry 'lisp 'read_char {this, stream, char})

	(vpif {char == char_lf})
		(call 'hmap 'search {this->lisp_environment, this->lisp_sym_stream_line} {_, iter, _})
		(breakifnot {iter})
		(call 'pair 'get_second {*iter} {_, line})
		(assign {line->num_value + 1} {line->num_value})
	(endif)

	(call 'stream 'read_char {stream} {_, char})

	(exit 'lisp 'read_char {this, char})
	(pop-scope)
	(return)

(def-func-end)

(def-method 'stream 'lisp_filestream)
	;inputs
	;r0 = lisp object (ptr)
	;r1 = args vector object (ptr)
	;outputs
	;r0 = lisp object (ptr)
	;r1 = return value object (ptr)

	(entry 'stream 'lisp_filestream '(r0 r1))
	(assign '(r0 r1) '(r8 r7))

(errorcases
	(call 'lisp 'env_args_type '(r1 ($ sig) 1))
	(gotoif (list (method-output 'lisp 'env_args_type 0) '== 0) 'error))

	(call 'vector 'get_first '(r7) '(_ r5))
	(vp-add-cr str_data r5)
	(call 'sys_str 'compare '(r5 "stdin") '(r0))
	(vpif '(r0 == 0))
		(call 'obj 'ref '((r8 lisp_stdin)) '(r0))
		(goto 'funcexit)
	(endif)
	(call 'sys_str 'compare '(r5 "stdout") '(r0))
	(vpif '(r0 == 0))
		(call 'obj 'ref '((r8 lisp_stdout)) '(r0))
		(goto 'funcexit)
	(endif)
	(call 'sys_str 'compare '(r5 "stderr") '(r0))
	(vpif '(r0 == 0))
		(call 'obj 'ref '((r8 lisp_stderr)) '(r0))
		(goto 'funcexit)
	(endif)
	(call 'str 'create_from_file '(r5) '(r0))
	(vpif '(r0 != 0))
		(call 'stream_str 'create '(r0) '(r0))
	(else)
		(call 'obj 'ref '((r8 lisp_sym_nil)) '(r0))
	(endif)

(vp-label 'funcexit)
	(exit 'stream 'lisp_filestream '(r8 r0))
	(vp-ret)

(errorcases
(vp-label 'error)
	(jump 'lisp 'repl_error '(r8 "(file-stream path)" error_msg_wrong_types r7))
	(signature 'sig 'str))

(def-func-end)

